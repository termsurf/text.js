{
  "compilerOptions": {
    "module": "es2015",
    "target": "ES2015",
    "lib": ["es2020", "dom"],
    "outDir": "host",
    "rootDir": ".",
    "sourceMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "noErrorTruncation": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": false,
    "declaration": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["*.ts", "**/*.ts", "*.d.ts"],
  "exclude": ["node_modules", "host", "tmp"]
}
